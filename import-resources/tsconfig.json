{
    "compilerOptions": {
        "outDir": "./build",
        "lib": ["ES2022", "DOM"],
        "module": "commonjs",
        "target": "ES2022",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "inlineSourceMap": true
    },
    "include": ["*.ts"],
    "compileOnSave": true
}
